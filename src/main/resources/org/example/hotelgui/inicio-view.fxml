<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.hotelgui.controller.InicioController">

    <children>
        <TabPane fx:id="tabPrincipal" layoutX="14.0" layoutY="14.0"
                 prefHeight="373.0" prefWidth="573.0"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- ======= TAB CLIENTES ======= -->
                <Tab text="Clientes">
                    <content>
                        <AnchorPane fx:id="tabClientes" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Pane prefHeight="348.0" prefWidth="573.0">
                                    <children>

                                        <TableView fx:id="tblClientes" layoutX="14.0" layoutY="54.0"
                                                   prefHeight="279.0" prefWidth="383.0">
                                            <columns>
                                                <TableColumn fx:id="colIdCliente" prefWidth="54.6666" text="#"/>
                                                <TableColumn fx:id="colIdentificacionCliente" prefWidth="122.0" text="IdentificaciÃ³n"/>
                                                <TableColumn fx:id="colNombreCliente" prefWidth="204.0" text="Nombre Completo"/>
                                            </columns>
                                        </TableView>

                                        <Button fx:id="btnAgregarCliente" layoutX="453.0" layoutY="146.0"
                                                mnemonicParsing="false" prefHeight="25.0" prefWidth="66.0"
                                                text="Agregar" onAction="#agregarCliente"/>
                                        <Button fx:id="btnModificarCliente" layoutX="453.0" layoutY="181.0"
                                                mnemonicParsing="false" text="Modificar" onAction="#modificarCliente"/>
                                        <Button fx:id="btnEliminarCliente" layoutX="453.0" layoutY="216.0"
                                                mnemonicParsing="false" prefHeight="25.0" prefWidth="66.0"
                                                text="Eliminar" onAction="#eliminarCliente"/>

                                        <TextField fx:id="txtBuscarCliente" layoutX="14.0" layoutY="14.0"/>
                                        <Button fx:id="btnBuscarCliente" layoutX="172.0" layoutY="14.0"
                                                mnemonicParsing="false" text="Buscar" onAction="#buscarCliente"/>

                                    </children>
                                </Pane>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ======= TAB HABITACIONES (puedes completar luego) ======= -->
                <Tab fx:id="tabHabitaciones" text="Habitaciones">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Pane prefHeight="343.0" prefWidth="573.0"/>
                                <TableView fx:id="tblHabitaciones" layoutX="15.0" layoutY="52.0"
                                           prefHeight="279.0" prefWidth="383.0">
                                    <columns>
                                        <TableColumn prefWidth="54.6666" text="#"/>
                                        <TableColumn prefWidth="206.0" text="Tipo"/>
                                        <TableColumn prefWidth="120.6666" text="Precio"/>
                                    </columns>
                                </TableView>
                                <Button fx:id="btnAgregarHabitacion" layoutX="454.0" layoutY="144.0"
                                        mnemonicParsing="false" prefHeight="25.0" prefWidth="66.0"
                                        text="Agregar"/>
                                <Button fx:id="btnModificarHabitacion" layoutX="454.0" layoutY="179.0"
                                        mnemonicParsing="false" text="Modificar"/>
                                <Button fx:id="btnEliminarHabitacion" layoutX="454.0" layoutY="214.0"
                                        mnemonicParsing="false" prefHeight="25.0" prefWidth="66.0"
                                        text="Eliminar"/>
                                <TextField fx:id="txtBuscarHabitacion" layoutX="15.0" layoutY="12.0"/>
                                <Button fx:id="btnBuscarHabitacion" layoutX="173.0" layoutY="12.0"
                                        mnemonicParsing="false" text="Buscar"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
